<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/category_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="3dp"
        app:cardElevation="1dp"
        app:contentPadding="5dp"
        app:cardBackgroundColor="@color/colorButtonAccent"
        android:layout_marginTop="1dp"
        android:layout_marginRight="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categ_Name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:fadingEdge="none"
                android:gravity="top"
                android:paddingLeft="3dp"
                android:text="Machine Name"
                android:textColor="@color/Bink"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                app:fontFamily="@font/berkshire_swash" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/prodRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                tools:listitem="@layout/item_product" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>